<%= render "shared/header" %>

  <body>
    <%= render "shared/nav" %>
    <div class="container text-center mb-4">
      <% if current_user %>
         <div class="mb-3">
          <small class="text-info">[<%= current_user.name %> さんログイン中 / 所持ポイント：<%= current_user.point %> pts]</small>
        </div>
      <% end %>
      <% if flash.notice %>
        <div class="alert alert-success mt-5"><%= flash.notice %></div>
      <% end %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>

      <%= render "shared/footer" %>
    </div>
    

  </body>
</html>
